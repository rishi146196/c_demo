pipeline {
    agent {
        label 'docker'
    }

    environment {
        IMAGE_NAME = "c_demo"  // Ensure lowercase
        DOCKER_REGISTRY = "rushikesh196/c_demo"
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/rishi146196/c_demo.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                bat 'docker build -t %IMAGE_NAME% .'
            }
        }

        stage('Push to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                    bat '''
                    echo %PASSWORD% | docker login -u %USERNAME% --password-stdin
                    docker tag %IMAGE_NAME% %DOCKER_REGISTRY%
                    docker push %DOCKER_REGISTRY%
                    '''
                }
            }
        }

        stage('Deploy to k8s') {
            steps {
                sh 'sudo k3s kubectl apply -f k8s\\deployment.yaml'
                sh 'sudo k3s kubectl apply -f k8s\\service.yaml'
            }
        }
    }
}
